<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BedNameStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:text">@string/name</item>
    </style>

    <style name="PlacementStyle" parent="BedNameStyle">
        <item name="android:text" />
        <item name="android:layout_marginEnd">@dimen/spacing_large</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="PlacementSmallStyle" parent="PlacementStyle">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="CropRotationStyle" parent="BedNameStyle">
        <item name="android:text">@string/seasons_bed_without_plants</item>
    </style>

    <style name="CropRotationSmallStyle" parent="CropRotationStyle">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="CropRotationGroupItemStyle">
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
    </style>

    <style name="CropRotationListItemStyle">
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>
</resources>