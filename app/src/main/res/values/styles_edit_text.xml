<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WideTextViewStyleOuter" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="WideTextViewStyleInner" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:lines">5</item>
    </style>
</resources>