<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CropRotationListItemStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/placement_crop_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PlacementSmallStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seasons_crop_rotation" />

    <TextView
        android:id="@+id/seasons_crop_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CropRotationSmallStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>