<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <item name="itemBackground">@null</item>
        <item name="android:background">@color/salmon</item>
        <item name="itemTextColor">@color/black</item>
        <item name="theme">@style/Overlay</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewText.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewText.Inactive</item>
    </style>

    <style name="Overlay">
        <item name="android:background">@null</item>
    </style>

    <style name="BottomNavigationViewText.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="BottomNavigationViewText.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>
</resources>