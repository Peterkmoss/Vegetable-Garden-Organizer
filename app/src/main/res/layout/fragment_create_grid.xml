<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/insert_plant_btn"
        android:layout_width="@dimen/spacing_xlarge"
        android:layout_height="@dimen/spacing_xlarge"
        android:background="@null"
        android:contentDescription="@string/select_plant_text"
        android:src="@drawable/ic_plant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_column_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_column_text"
        android:layout_margin="@dimen/spacing_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_plus"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_row_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_row_text"
        android:layout_margin="@dimen/spacing_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_plus"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/remove_column_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_column_text"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/add_column_button"
        app:layout_constraintStart_toStartOf="@id/add_column_button"
        android:src="@drawable/ic_minus"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/remove_row_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_column_text"
        android:layout_marginStart="@dimen/spacing_small"
        app:layout_constraintTop_toTopOf="@id/add_row_button"
        app:layout_constraintStart_toEndOf="@id/add_row_button"
        android:src="@drawable/ic_minus"/>

</androidx.constraintlayout.widget.ConstraintLayout>
