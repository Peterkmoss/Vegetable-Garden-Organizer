<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/plant_name"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_category"
        app:layout_constraintTop_toBottomOf="@id/plant_name"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_earliest"
        app:layout_constraintTop_toBottomOf="@id/plant_category"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_latest"
        app:layout_constraintTop_toBottomOf="@id/plant_earliest"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_sowing"
        app:layout_constraintTop_toBottomOf="@id/plant_latest"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_crop_rotation"
        app:layout_constraintTop_toBottomOf="@id/plant_sowing"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_sowing_depth"
        app:layout_constraintTop_toBottomOf="@id/plant_crop_rotation"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_distance"
        app:layout_constraintTop_toBottomOf="@id/plant_sowing_depth"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_fertilizer"
        app:layout_constraintTop_toBottomOf="@id/plant_distance"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_harvest"
        app:layout_constraintTop_toBottomOf="@id/plant_fertilizer"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_planted_date"
        app:layout_constraintTop_toBottomOf="@id/plant_harvest"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/plant_watered_date"
        app:layout_constraintTop_toBottomOf="@id/plant_planted_date"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>