<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/gardenOverviewFragment">
    <fragment
        android:id="@+id/gardenOverviewFragment"
        android:name="dk.mifu.pmos.vegetablegardening.viewgarden.GardenOverviewFragment"
        android:label="fragment_garden_overview"
        tools:layout="@layout/fragment_garden_overview" >
        <action
            android:id="@+id/see_bed_action"
            app:destination="@id/bedOverviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/bedOverviewFragment"
        android:name="dk.mifu.pmos.vegetablegardening.viewgarden.BedOverviewFragment"
        android:label="BedOverviewFragment" >
        <action
            android:id="@+id/show_plant_info"
            app:destination="@id/plantInfoDialog" />
    </fragment>
    <fragment
        android:id="@+id/plantDetails"
        android:name="dk.mifu.pmos.vegetablegardening.viewgarden.PlantDetailsFragment"
        android:label="PlantDetails" >
        <argument android:name="plant"
            app:argType="dk.mifu.pmos.vegetablegardening.models.Plant" />
    </fragment>
    <dialog
        android:id="@+id/plantInfoDialog"
        android:name="dk.mifu.pmos.vegetablegardening.views.PlantInfoDialog"
        android:label="PlantInfoDialog" >
        <action
            android:id="@+id/to_plant_details"
            app:destination="@id/plantDetails" />
        <argument
            android:name="plant"
            app:argType="dk.mifu.pmos.vegetablegardening.models.Plant" />
    </dialog>
</navigation>